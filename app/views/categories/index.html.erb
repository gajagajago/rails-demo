<h1>카테고리</h1>

<div class="card m-b-20" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <% @category.each do |category| %>
      <li class="list-group-item">
        <%= link_to category.name, category_path(category) %>
        <%= button_to '수정', edit_category_path(category), method: :get, class: "btn btn-outline-info", disabled: !admin? %>
      </li>
    <% end %>
  </ul>
</div>

<%= button_to '생성', new_category_path, method: :get, class: "btn btn-outline-primary", disabled: !(user_signed_in? && admin?) %>

<%= will_paginate @category, class: "flickr_pagination" %>

<style lang="scss" scoped>
  .list-group-item {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
  }
</style>