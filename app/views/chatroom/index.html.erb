<h1>채팅방</h1>

<div class="container">
  <div class="row">
    <div class="col-9 p-l-0">
      <div class="chatroom card">
        <div class="card-header">
          메세지
        </div>
        <div class="card-body">
          <%= render @messages %>
        </div>
        <div class="card-footer text-muted">
          <%= form_with(model: Message, local: true) do |f| %>
            <div class="input-group">
              <%= f.text_area :message, class: "form-control m-r-10", :rows => 1 %>
              <%= f.button :submit, class: "chat-button" do %>
                <i class="fas fa-arrow-circle-up fa-lg"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-3 p-r-0">
      <div class="chatroom card">
        <div class="card-header">
          온라인 유저
        </div>
        <div class="list-group" id="list-tab" role="tablist">
          <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">유준열</a>
          <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">라윤희</a>
          <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">채팅봇</a>
        </div>
      </div>
    </div>
  </div>
</div>

<style lang="scss" scoped>
  .chatroom {
      height: 80vh;
  }

  .chat-button {
      color: #2E2F30;
      background: none;
      border: none;
      padding: 0;
  }

  .card-body {
      overflow-y: auto;
  }

  .input-group {
      display: flex;
      flex-direction: row;
  }

  .list-group-item::before{
      content: '';
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 40%;
      background-color: rgba(100,255,51,0.74);
      margin-right: 5px;
  }
</style>