<h1>유저</h1>

<div class="grid-col2">
  <% @user.each do |user| %>
    <%= render partial: "card", locals: { user: user } %>
  <% end %>
</div>

<%= will_paginate @user, class: "flickr_pagination" %>

<style lang="scss" scoped>
    .grid-col2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        column-gap: 20px;
    }
</style>