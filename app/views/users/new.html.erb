<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |e| %>
    <%= render partial: 'commons/errors', locals: { error: e } %>
  <% end %>
<% else %>
  <h1>회원가입</h1>

  <%= form_for(@user) do |f| %>
    <div class="m-b-20">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="m-b-20">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="m-b-20">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>

    <%= f.submit '가입', class: "btn btn-outline-primary" %>
  <% end %>
<% end %>

<style lang="scss" scoped>
    div {
        width: 300px;
        display: flex;
        flex-direction: column;
    }
</style>