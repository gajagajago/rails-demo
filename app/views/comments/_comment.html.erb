  .flex-row {
      display: flex;
      flex-direction: row;
  }

  .comment {
      padding: 10px;
      border-bottom: 1px solid #eee;
  }

  .comment-info {
      justify-content: space-between;
      margin-bottom: 10px;
  }

  .time {
      align-self: center;
      padding: 0 20px;
