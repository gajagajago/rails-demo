<h1>Showing article details</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <div class="m-b-20">
    <%= f.label :title %>
    <%= f.text_field :title, :readonly => true %>
  </div>

  <div class="m-b-20">
    <%= f.label :description %>
    <%= f.text_area :description, :readonly => true %>
  </div>

  <div class="m-b-20">
    <%= f.label :user %>
    <%= fields_for :user, @article.user do |u| %>
      <%= u.collection_select(:id, User.all, :id, :name, {}, { disabled: true }) %>
    <% end %>
  </div>
<% end %>

<style lang="scss" scoped>
    div {
        width: 300px;
        display: flex;
        flex-direction: column;
    }
</style>