      border-bottom: 1px solid #ccc;
      background: #fcfcfc;
  }

  .bottom-area {
      border: 1px solid #ccc;
      border-radius: 5px;
      background: linear-gradient(to bottom,#fff 0,#f9f9f9 100%);
      padding: 10px;
  }

  .description {
      padding: 11px;
  }

  .block {
      width: 300px;
      display: flex;
      flex-direction: column;
  }

  .checkbox_container {
      display: flex;
      flex-direction: row;
      align-items: center;
  }

  .checkbox_container input {
      margin-right: 5px;
  }

  .checkbox_container label {
      margin: 0;
  }

  ul {
      padding: 0;
  }

  .digg_pagination {
      display: flex;
      justify-content: center;
  }
</style>